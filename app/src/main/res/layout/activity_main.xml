<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe_book_background"
    tools:context=".view.ui.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/upper_fragment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:name="com.denis.recipebookandroid.view.ui.BlankFragment"
        tools:layout="@layout/fragment_login"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottom_fragment_container"
        android:name="com.denis.recipebookandroid.view.ui.user_main.UserMainFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper_fragment_container"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        tools:layout="@layout/user_main_fragment" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#3b3a3a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_page_bottom_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>