<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/field">


                <Button
                    android:id="@+id/add_button"
                    android:text="ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="RecipeName"
                    android:textSize="20sp"/>

            <TextView
                android:id="@+id/dish_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Dish_Type"
                android:textSize="20sp"
                />


            <ImageView
                android:id="@+id/recipe_picture"
                android:layout_gravity="center_horizontal"
                android:layout_width="189dp"
                android:layout_height="72dp"
                android:layout_marginTop="12dp"
                app:constraintSet="@drawable/recipe_default_image"
                />

            <TextView
                android:id="@+id/dish_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/list_item_style"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:hint="Here will be a description of the dish that we are going to cook!!"
                android:gravity="center"
                android:textColorHint="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/ingredients_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="Ingredients"
                android:textSize="20sp"
              />

            <ListView
                android:id="@+id/ingredients_list"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/list_item_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:padding="5dp"
               />

            <TextView
                android:id="@+id/cooking_process_title"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="Cooking Process"
                android:textSize="20sp"
                />


            <ListView
                android:id="@+id/cooking_process_list"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_style"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>